{
  "language": {
    "name": "Go",
    "version_constraint": "1.23.0 or later"
  },
  "package_manager": {
    "name": "go",
    "install_command": "go install github.com/gohugoio/hugo@latest",
    "config_file": "go.mod"
  },
  "build_tools": [
    "mage"
  ],
  "test_framework": [
    "mage test"
  ],
  "system_dependencies": {
    "identified_in_ci": [
      "gcc",
      "pandoc",
      "mingw",
      "dart-sass",
      "ruby",
      "python",
      "asciidoctor",
      "docutils",
      "staticcheck"
    ],
    "likely_required": [
      "libc6-dev",
      "build-essential",
      "curl",
      "tar",
      "git",
      "ca-certificates"
    ]
  }
}
{
  "language": {
    "name": "PHP",
    "version_constraint": ">=5.4.8"
  },
  "package_manager": {
    "name": "composer",
    "install_command": "composer install --no-progress --prefer-dist --optimize-autoloader",
    "config_file": "composer.lock"
  },
  "build_tools": [],
  "test_framework": [
    "PHPUnit"
  ],
  "system_dependencies": {
    "identified_in_ci": [
      "imagick",
      "sqlite3",
      "pgsql",
      "mysqli",
      "pdo",
      "pdo_mysql",
      "pdo_pgsql",
      "pdo_sqlite",
      "mbstring"
    ],
    "likely_required": [
      "php",
      "php-xml",
      "php-mbstring",
      "php-zip",
      "php-gd",
      "php-curl",
      "php-json"
    ]
  }
}